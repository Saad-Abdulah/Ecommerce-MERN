# Database Configuration
# Replace with your MongoDB connection string
MONGO_URI="mongodb://localhost:27017/your-database-name"

# Frontend URL (CORS)
# Update this with your frontend URL in production
ORIGIN="http://localhost:3000"

# Email Configuration
# Use your email service credentials
EMAIL="your-email@example.com"
PASSWORD="your-app-specific-password"

# Authentication Settings
# Customize these values based on your needs
LOGIN_TOKEN_EXPIRATION="30d"  # JWT token expiration for login
OTP_EXPIRATION_TIME="120000"  # OTP expiration in milliseconds (2 minutes)
PASSWORD_RESET_TOKEN_EXPIRATION="2m"  # Password reset token expiration
COOKIE_EXPIRATION_DAYS="30"  # Cookie expiration in days

# Security
# Generate a strong random string for your secret key
# You can use: require('crypto').randomBytes(64).toString('hex')
SECRET_KEY="replace-with-long-random-string-minimum-32-characters"

# Environment
# Set to "true" in production
PRODUCTION="false"

# Optional: Stripe Configuration (if implementing payments)
# STRIPE_SECRET_KEY="your-stripe-secret-key"
# STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Optional: Cloud Storage (if implementing file uploads)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"
